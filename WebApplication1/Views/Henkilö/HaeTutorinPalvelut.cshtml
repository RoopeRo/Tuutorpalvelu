@*@model IEnumerable<WebApplication1.Models.Palvelu>*@



<p>

    <a asp-action="Create">Lisää uusi palvelu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nimi
            </th>
            <th>
                Tyyppi
            </th>
            <th>
                Ryhmä
            </th>
            <th>
                Hinta
            </th>
            <th>
                Pvm
            </th>
            <th>
                Kesto
            </th>
            <th>
                Sijainti
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.palvelut)
        {
            <tr>
                <td>
                    @item.Nimi
                </td>
                <td>
                    @item.Tyyppi
                </td>
                <td>
                    @item.Ryhmä
                </td>
                <td>
                    @item.Hinta
                </td>
                <td>
                    @item.Pvm
                </td>
                <td>
                    @item.Kesto
                </td>
                <td>
                    @item.Sijainti
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.PalveluId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PalveluId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PalveluId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>