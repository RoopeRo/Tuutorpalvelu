@model WebApplication1.Models.Palvelu

<h1>@ViewBag.Palvelu.Nimi</h1>
<p>@ViewBag.Palvelu.Kuvaus</p>

@if (ViewBag.Palvelu.Varattu == false)
{
    <p><i>Varaa palvelu ottamalla suoraan yhteyttä palveluntarjoajaan!</i></p>
    <button id="varausNappi" type="button" style="background-color:cornflowerblue" onclick="location.href='mailto:@ViewBag.Palvelu.Tutor.Email';">Varaa</button>
}
@if (ViewBag.Palvelu.Varattu == true)
{
    <p style="color:darkred"><b>Tämä palvelu on jo varattu</b></p>
}
<br />
<h2>Palvelun tiedot</h2>
<table class="table" id="details">
    @if (ViewBag.Palvelu != null)
    {
        <tr>
            <th scope="row">Varaustilanne</th>
            @if (ViewBag.Palvelu.Varattu == true)
            {
                <td>Varattu</td>
            }
            @if (ViewBag.Palvelu.Varattu == false)
            {
                <td>Vapaa</td>
            }

        </tr>
        <tr>
            <th scope="row">Id</th>
            <td>@ViewBag.Palvelu.PalveluId</td>
        </tr>
        <tr>
            <th scope="row">@Html.DisplayNameFor(model => model.Nimi)</th>
            <td>@ViewBag.Palvelu.Nimi</td>
        </tr>
        <tr>
            <th scope="row">@Html.DisplayNameFor(model => model.Ryhmä)</th>
            <td>@ViewBag.Palvelu.Ryhmä</td>
        </tr>
        <tr>
            <th scope="row">@Html.DisplayNameFor(model => model.Tyyppi)</th>
            <td>@ViewBag.Palvelu.Tyyppi</td>
        </tr>
        <tr>
            <th scope="row">@Html.DisplayNameFor(model => model.Pvm)</th>
            <td>@ViewBag.Palvelu.Pvm</td>
        </tr>
        <tr>
            <th scope="row">@Html.DisplayNameFor(model => model.Kesto)</th>
            <td>@ViewBag.Palvelu.Kesto</td>
        </tr>
        <tr>
            <th scope="row">@Html.DisplayNameFor(model => model.Sijainti)</th>
            <td>@ViewBag.Palvelu.Sijainti</td>
        </tr>
        <tr>
            <th scope="row">@Html.DisplayNameFor(model => model.Hinta)</th>
            <td>@ViewBag.Palvelu.Hinta</td>
        </tr>
        <tr>
            <th scope="row">Tutor</th>
            <td>@($"{ViewBag.Palvelu.Tutor.Etunimi} {ViewBag.Palvelu.Tutor.Sukunimi}")</td>
        </tr>
        <tr>
            <th scope="row">Puhelinnumero</th>
            <td>@ViewBag.Palvelu.Tutor.PuhNro</td>
        </tr>
        <tr>
            <th scope="row">Sähköposti</th>
            <td> <a href="mailto:@ViewBag.Palvelu.Tutor.Email">@ViewBag.Palvelu.Tutor.Email</a></td>
        </tr>
    }

</table>


